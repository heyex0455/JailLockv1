_G.HeadSize = 4
_G.Disabled = true

local Players = game:GetService('Players')
local RunService = game:GetService('RunService')

local playerGui = Players.LocalPlayer:WaitForChild("PlayerGui")
local screenGui = Instance.new("ScreenGui", playerGui)

-- Function to create custom messages
local function createMessage(text, duration)
	local textLabel = Instance.new("TextLabel", screenGui)
	textLabel.Text = text
	textLabel.Size = UDim2.new(0, 300, 0, 50)
	textLabel.Position = UDim2.new(0.5, -150, 0.1, 0)
	textLabel.TextColor3 = Color3.new(1, 1, 1)
	textLabel.BackgroundColor3 = Color3.new(0, 0, 0)
	textLabel.BackgroundTransparency = 0.5
	textLabel.TextScaled = true
	textLabel.Visible = true

	-- Fade out function for notifications
	local function fadeOut()
		for i = 0, 1, 0.01 do
			textLabel.TextTransparency = i
			textLabel.BackgroundTransparency = i
			wait(0.05)
		end
		textLabel:Destroy()
	end

	wait(duration)
	fadeOut()
end

createMessage("V1 JailLock made by exo", 3)

RunService.RenderStepped:Connect(function()
	if _G.Disabled then
		for _, player in pairs(Players:GetPlayers()) do
			if player.Name ~= Players.LocalPlayer.Name then
				pcall(function()
					if player.Character and player.Character:FindFirstChild("Head") then
						local head = player.Character.Head
						head.Size = Vector3.new(_G.HeadSize, _G.HeadSize, _G.HeadSize)
						head.CanCollide = false
						head.Massless = true

						-- Team-based effects
						if player.Team then
							if player.Team.Name == "Prisoners" then
								head.BrickColor = BrickColor.new("Bright blue") -- Color for prisoners
								head.Material = Enum.Material.Neon
							elseif player.Team.Name == "Guards" then
								head.BrickColor = BrickColor.new("Bright red") -- Color for guards
								head.Material = Enum.Material.Neon
							end
						end

						-- Create ESP Box above the head
						local espBox = Instance.new("BoxHandleAdornment")
						espBox.Size = Vector3.new(1.5, 1.5, 1.5)
						espBox.Adornee = head
						espBox.Color3 = head.BrickColor.Color
						espBox.AlwaysOnTop = true
						espBox.ZIndex = 10
						espBox.Parent = head
					end
				end)
			end
		end
	end
end)
